#cssmenuitem
  padding 0
  margin 0
  border 0
  line-height 1

#cssmenuitem ul,
#cssmenuitem ul li,
#cssmenuitem ul ul
  list-style none
  margin 0
  padding 0

#cssmenuitem
  width 200px
  background #333333
  font-family 'Oxygen Mono', Tahoma, Arial, sans-serif
  zoom 1
  font-size 12px
  ul
    position relative
    z-index 597
    float left
    li
      float left
      min-height 1px
      line-height 1em
      vertical-align middle
      position relative
      float none
      &:hover
        & > ul
          visibility visible
      &.has-sub
        & > a
          &:after
            content '+'
            position absolute
            top 50%
            right 15px
            margin-top -6px
    ul
      visibility hidden
      position absolute
      top 100%
      left 0px
      z-index 598
      width 100%
      top 1px
      left 99%
      margin-top 1px
      width 200px
      -webkit-border-radius 0 3px 3px 0
      -moz-border-radius 0 3px 3px 0
      border-radius 0 3px 3px 0
      border 1px solid #0082e7
      li
        float none
        font-weight normal
        border-bottom 1px solid #0082e7
        &.first
          -webkit-border-radius 0 3px 0 0
          -moz-border-radius 0 3px 0 0
          border-radius 0 3px 0 0
        &.last
          -webkit-border-radius 0 0 3px 0
          -moz-border-radius 0 0 3px 0
          border-radius 0 0 3px 0
          border-bottom 0
        &:hover
          & > a
            background #4eb1ff
            color #ffffff
      ul
        top -2px
        right 0
      a
        font-size 12px
        color #ffffff
        &:hover
          color #ffffff
  &:before
    content ''
    display block
  &:after
    content ''
    display table
    clear both
  a
    display block
    padding 15px 20px
    color #ffffff
    text-decoration none
    text-transform uppercase
  & > ul
    width 200px
    & > li
      & > a
        border-right 4px solid #1b9bff
        color #ffffff
        &:hover
          color #ffffff
      &.active
        a
          background #1b9bff
  li
    position relative
  &.align-right
    float right
    & > ul
      & > li
        & > a
          border-left 4px solid #1b9bff
          border-right none
    li
      text-align right
    ul
      li
        &.has-sub
          & > a
            &:before
              content '+'
              position absolute
              top 50%
              left 15px
              margin-top -6px
            &:after
              content none
      ul
        visibility hidden
        position absolute
        top 0
        left -100%
        z-index 598
        width 100%
        -webkit-border-radius 3px 0 0 3px
        -moz-border-radius 3px 0 0 3px
        border-radius 3px 0 0 3px
        li
          &.first
            -webkit-border-radius 3px 0 0 0
            -moz-border-radius 3px 0 0 0
            border-radius 3px 0 0 0
          &.last
            -webkit-border-radius 0 0 0 3px
            -moz-border-radius 0 0 0 3px
            border-radius 0 0 0 3px

